---
import { getCollection } from 'astro:content';
import BlogPost from '@/layouts/BlogPost.astro';
import SeriesNav from '@/components/SeriesNav.astro';

function postUrl(post: { slug: string; data: { date: Date } }) {
  const { date } = post.data;
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, '0');
  const day = String(date.getDate()).padStart(2, '0');
  return `/blog/${year}/${month}/${day}/${post.slug}`;
}

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);

  return posts.map((post) => {
    const { date } = post.data;
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const day = String(date.getDate()).padStart(2, '0');

    return {
      params: { slug: `${year}/${month}/${day}/${post.slug}` },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();
const { title, excerpt, date, reading_time, categories, tags, hero_image, series } = post.data;

let seriesParts: { part: number; title: string; url: string }[] = [];
if (series) {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  seriesParts = allPosts
    .filter((p) => p.data.series?.name === series.name)
    .sort((a, b) => a.data.series!.part - b.data.series!.part)
    .map((p) => ({
      part: p.data.series!.part,
      title: p.data.title,
      url: postUrl(p),
    }));
}
---

<BlogPost
  title={title}
  excerpt={excerpt}
  date={date}
  reading_time={reading_time}
  categories={categories}
  tags={tags}
  hero_image={hero_image}
>
  {series && seriesParts.length > 1 && (
    <SeriesNav name={series.name} currentPart={series.part} parts={seriesParts} />
  )}
  <Content />
</BlogPost>
